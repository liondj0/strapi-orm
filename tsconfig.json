{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "lib": ["es2016", "dom", "es2017", "esnext.asynciterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./lib",
    "paths": {
      "*": ["./node_modules/*", "./src/types/*"]
    },
    "resolveJsonModule": true,
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true,
    "target": "ES2020"
  },
  "exclude": ["./node_modules", "./lib", "./.vscode", "./.idea", "./.ebextensions", "./.github", "./temp-upload", "./__tests__/*"],
  "include": ["./src/**/*.ts"]
}
